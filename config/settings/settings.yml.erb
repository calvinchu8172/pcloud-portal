magic_number: 5889
api:
  stun_ip_addresses:
  <% @pcloud['portal_app']['environment']['api']['stun_ip_addresses'].each do |address| %>
    - <%= address %>
  <% end %>
xmpp:
  server: <%= @pcloud['portal_app']['environment']['xmpp']['server'] %>
  device_resource_id: <%= @pcloud['portal_app']['environment']['xmpp']['device_resource_id'] %>
  bots:
<% @pcloud['portal_app']['environment']['xmpp']['bots'].each do |bot| %>
    - <%= bot %>
<% end %>
  nodes:
<% @pcloud['portal_app']['environment']['xmpp']['nodes'].each do |node| %>
    - <%= node %>
<% end %>
environments:
  name: <%= @pcloud['portal_app']['environment']['environments']['name'] %>
  api_domain: <%= @pcloud['portal_app']['environment']['environments']['api_domain'] %>
  portal_domain: <%= @pcloud['portal_app']['environment']['environments']['portal_domain'] %>
  paperclip:
    default:
      storage: <%= @pcloud['portal_app']['environment']['environments']['paperclip']['default']['storage'] %>
      s3_credentials: 
        bucket: <%= @pcloud['aws']['service']['s3']['bucket'] %>
        access_key_id: <%= @pcloud['aws']['key']['access_key'] %>
        secret_access_key: <%= @pcloud['aws']['key']['secret_key'] %>
    attachment:
      default:
        s3_host_name: <%= @pcloud['portal_app']['environment']['environments']['paperclip']['attachment']['default']['s3_host_name'] %>
        path: <%= @pcloud['portal_app']['environment']['environments']['paperclip']['attachment']['default']['path'] %>
  sqs:
    name: <%= @pcloud['aws']['service']['sqs']['name'] %>
    attributes:
      access_key_id: <%= @pcloud['aws']['key']['access_key'] %>
      secret_access_key: <%= @pcloud['aws']['key']['secret_key'] %>
      region: <%= @pcloud['aws']['service']['sqs']['region'] %>
  ddns: <%= @pcloud['portal_app']['environment']['environments']['ddns'] %>
  cdn: <%= @pcloud['portal_app']['environment']['environments']['cdn'] %>
  filter_list:
<% @pcloud['aws']['service']['route53']['reserved_hosts'].each do |hostname| %>
    - <%= hostname %>
<% end %>
  ga_tracker: <%= @pcloud['portal_app']['environment']['environments']['ga_tracker'] %>
oauth:
  facebook_app_id: <%= @pcloud['portal_app']['environment']['oauth']['facebook_app_id'] %>
  facebook_secret: <%= @pcloud['portal_app']['environment']['oauth']['facebook_secret'] %>
  google_app_id: <%= @pcloud['portal_app']['environment']['oauth']['google_app_id'] %>
  google_secret: <%= @pcloud['portal_app']['environment']['oauth']['google_secret'] %>
recaptcha:
  config:
    public_key: <%= @pcloud['portal_app']['environment']['recaptcha']['config']['public_key'] %>
    private_key: <%= @pcloud['portal_app']['environment']['recaptcha']['config']['private_key'] %>
redis:
  web_host: <%= @pcloud['aws']['service']['elasticache']['web'] %>
  xmpp_host: <%= @pcloud['aws']['service']['elasticache']['xmpp'] %>
  port: <%= @pcloud['portal_app']['environment']['redis']['port'] %>
