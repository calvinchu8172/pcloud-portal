<%= @env %>:
  delivery_method: <%= @pcloud['portal_app']['mailer']['delivery_method'] %>
  smtp_settings:
    address: <%= @pcloud['aws']['service']['ses']['smtp_host'] %>
    port: <%= @pcloud['aws']['service']['ses']['smtp_port'] %>
    user_name: <%= @pcloud['aws']['service']['ses']['smtp_user'] %>
    password: <%= @pcloud['aws']['service']['ses']['smtp_password'] %>
    authentication: <%= @pcloud['portal_app']['mailer']['smtp_settings']['authentication'] %>
    enable_starttls_auto: <%= @pcloud['portal_app']['mailer']['smtp_settings']['enable_starttls_auto'] %>
  default:
    from: <%= @pcloud['portal_app']['mailer']['default']['from'] %>
  default_url_options:
    protocol: <%= @pcloud['portal_app']['mailer']['default_url_options']['protocol'] %>
    host: <%= @pcloud['portal_app']['mailer']['default_url_options']['host'] %>
