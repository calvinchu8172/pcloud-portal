<% provide(:flow, @device.model_name + "," + I18n.t("titles.unpairing")) %>

<div class="unpairing">

  <div class="zyxel_content">

    <%# display the unpairing device %>
    <div class="zyxel_device">
      <%= image_tag @device.product.asset.url(:medium), class: "zyxel_device_image" %>
      <h2 class="zyxel_h2_icon1"><%= @device.model_name %></h2>
    </div>
    <%# display the unpairing device - end %>

    <%# unpairing information %>
    <span class="zyxel_span2"><%= I18n.t("warnings.settings.unpairing.success") %></span>

    <div class="zyxel_btn_area">
        <%= link_to I18n.t("labels.confirm"), "/personal/index", class: "zyxel_btn_ok" %>
    </div>

  </div>
</div>