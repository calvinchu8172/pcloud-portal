<h1>Find devices</h1>
<div class="discoverer" ng-app="device_list_app" ng-controller="DeviceListCtrl">

  <%# Top content - result text and re-find button %>
  <div class="top-content row">
    <div class="result_text col-xs-7 col-sm-7">
  	  搜尋結果 <timer countdown="10041" max-time-unit="'minute'" interval="1000">{{mminutes}} minute{{minutesS}}, {{sseconds}} second{{secondsS}}</timer>
    </div>
    <div class="col-xs-5 col-xs-5">
      <button class="btn btn-deafult" ng-click="doClick()">重新搜尋</button>
    </div>
  </div>

  <%# device list %>
  <ul class="devices_list list-unstyled">
    <li class="device" ng-repeat="device in devices">
        <div class="device_img">
          <img ng-src="{{device.img_url}}" style="width:100px;">
        </div>
        <div class="device_name">{{device.product_name}}</div>
        <div class="device_btn">
          <a href="/discoverer/check/{{device.device_id}}" class="btn btn-default" >裝置配對</a>
        </div>
    </li>
  </ul>
  <%# device list end %>
  <%# Top content end %>

	<%# bottom content - Manually Add button %>
	<div class="bottom-content">
		<%= link_to('手動加入裝置', "/discoverer/add/", class: "btn-primary") %>
	</div>
	<%# bottom content %>

  <%# save json data in this node %>
  <%= tag("div", data: @result, id: "device-data") %>
</div>
