<% provide(:flow, 'Help') %>
<div class="zyxel_content help">
    <div class="btn_wrap">
      <button id="expand" href="#" >Expand All</button>
      <button id="collapse" href="#" >Collapse All</button>
    </div>
    <ul id="tabs">
      <%= render partial: "help/introduction/introduction" %>
      <%= render partial: "help/sign_in/sign_in" %>
      <%= render partial: "help/register/register" %>
      <%= render partial: "help/forget_password/forget_password" %>
      <%= render partial: "help/profile/profile" %>
      <%= render partial: "help/pairing/pairing" %>
      <%= render partial: "help/ddns/ddns" %>
      <%= render partial: "help/upnp/upnp" %>
    </ul>

</div>

<script>
  (function(){
    var $tab_items = $('#tabs h2');
    checkToggle();

    $('#expand').on('click', function(){
      $tab_items.addClass('active');
      checkToggle();
    });
    $('#collapse').on('click', function(){
      $tab_items.removeClass('active');
      checkToggle();
    });

    $tab_items.on('click', function(){
      var item = $(this);

      if(item.hasClass('active')){
        item.removeClass('active');
        checkToggle();
      }else{
        item.addClass('active');
        checkToggle();
      };
    });

    function checkToggle(){
      if( $('h2.active').length  == $tab_items.length ){
        $('#expand').addClass('disable');
      }else{
        $('#expand').removeClass('disable');
      };

      if($('h2.active').length == 0){
        $('#collapse').addClass('disable');
      }else{
        $('#collapse').removeClass('disable');
      };
    };

  })();
</script>