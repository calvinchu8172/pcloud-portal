<%# need-add-i18n %>
<% provide(:flow, "Reset Password") %>

<div class="zyxel_content">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <fieldset>
      <table class="zyxel_table_style">
        <tr>
          <%# need-add-i18n %>
          <th>Account</th>
          <td colspan="3"><%= @email %></td>
        </tr>

        <tr>
          <%# need-add-i18n %>
          <th><span>* </span><%= f.label :password, "New password", class: "th_label" %></th>
          <td colspan="3">
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "input_style1 td_field" %>
          </td>
        </tr>

        <tr>
          <%# need-add-i18n %>
          <th><span>* </span><%= f.label :password_confirmation, "Confirm new password", class: "th_label" %></th>
          <td colspan="3">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input_style1 td_field" %>
          </td>
        </tr>
      </table>
      <div class="zyxel_btn_area">
        <%# need-add-i18n %>
        <a href="/" class="zyxel_btn_back">Cancel</a>
        <%= f.submit "Submit", class: "zyxel_btn_submit" %>
      </div><!-- zyxel_btn_area -->
    </fieldset>
  <% end %>
</div>