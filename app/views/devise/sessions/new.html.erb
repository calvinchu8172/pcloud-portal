<div class="container">
	<h1><%= I18n.t("titles.sign_in") %></h1>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div><%= f.label :email, I18n.t("user.labels.email") %><br />
	  <%= f.email_field :email, autofocus: true %></div>

	  <div><%= f.label :password, I18n.t("user.labels.password") %><br />
	    <%= f.password_field :password, autocomplete: "off" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, I18n.t("user.labels.remember_me") %></div>
	  <% end -%>

	  <div><%= f.submit I18n.t("titles.sign_in") %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>