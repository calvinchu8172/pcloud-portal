<h1><%= I18n.t("titles.sign_up") %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(resource, html: {role: "form"},as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, I18n.t("user.labels.email") %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, I18n.t("user.labels.first_name"), for: "first_name" %>
        <%= f.text_field :first_name, autofocus: true, id: "first_name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, I18n.t("user.labels.last_name"), for: "last_name" %>
        <%= f.text_field :last_name, id: "last_name", class: "form-control" %>
      </div>

      
      <div class="form-group">
        <%= f.label :password, I18n.t("user.labels.password") %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, I18n.t("user.labels.password_confirmation") %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">

        <%= f.label :gender, for: "gender" %>
        <%= f.radio_button :gender, "1"%>
        <%= label :gender, 'Male', for: "user_gender_1"%>
        <%= f.radio_button :gender, "2"%>
        <%= label :gender, 'Female', for: "user_gender_2"%>
      </div>

      <div class="form-group">
        <%= f.label :birthday, for: "birthday" %>
        <%= f.date_select :birthday, {:include_blank => true, :start_year => 1955, :end_year => 2012}, id: "birthday"%>
      </div>

      <div class="form-group">
        <%= f.label :mobile_number, I18n.t("user.labels.phone_number"), for: "mobile_number" %>
        <%= f.text_field :mobile_number, id: "mobile_number", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :language, I18n.t("user.labels.language") %>
        <%= f.select :language, @locale_options, id: "language", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :country, I18n.t("user.labels.country") %>
        <%= f.country_select :country, {'' => ''}  %>
      </div>

      <div class="form-group">
        <%= f.check_box :agreement %>
        <%= label :agreement, 'I agree to ', for: "user_agreement" %>
        terms
      </div>
      <div class="form-group">
        <%= f.check_box :edm_accept %>
        <%= label :edm_accept, 'I accept edm', for: "user_edm_accept" %>
      </div>
      <div class="form-group">
        <%= recaptcha_tags ajax: true %>
      </div>

      <div><%= f.submit I18n.t("labels.sign_up"), class: "btn btn-default" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>