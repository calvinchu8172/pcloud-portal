<fieldset>
  <table class="zyxel_table_style">
    <tr>
      <th><%= I18n.t("user.labels.email") %></th>
      <td colspan="3"><%= current_user.email %></td>
    </tr>
    <tr>
      <th><span>* </span><%= f.label :current_password, class: "th_label" %></th>
      <td colspan="3"><%= f.password_field :current_password, autocomplete: "off", class: "input_style1 td_field" %></td>
    </tr>
    <tr>
      <th><span>* </span><%= f.label :password, class: "th_label" %></th>
      <td colspan="3"><%= f.password_field :password, autocomplete: "off", class: "input_style1 td_field" %></td>
    </tr>
    <tr>
      <th><span>* </span><%= f.label :password_confirmation %></th>
      <td colspan="3"><%= f.password_field :password_confirmation, autocomplete: "off", class: "input_style1 td_field" %></td>
    </tr>
  </table>
</fieldset>