<%= simple_form_for @product do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel"><%= title %></h4>
</div>
<div class="modal-body">
    <%= f.input :name, label: '名稱' %>
    <br>
    <%= f.input :model_class_name, label: '型號' %>
    <br>
    <%= f.input :asset, as: :file, label: '產品圖' %>
    <br>
    <%= f.input :pairing, as: :file, label: '配對示意圖' %>
    <br>
    <%= f.input :category_id, label: '分類', collection: Category.collections, include_blank: false, required: true %>
    <br>
    <%#= f.input :show, label: '顯示與否', as: :boolean, :input_html => { :display => 'block' }, wrapper_html: { class: 'product-checkbox-custom' } %>
    <%= f.input :show, as: :radio_buttons, label: '顯示與否', collection: [['是', true], ['否', false]] %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">取消編輯</button>
    <%= f.button :submit, "確認送出", class: "btn btn-primary" %>
</div>
<% end %>