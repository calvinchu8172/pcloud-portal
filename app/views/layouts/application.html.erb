<!DOCTYPE html>
<html >
<head>
  <title>Pcloud</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Raleway:400,300' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <%# header %>
    <%= render 'layouts/header' %>
    
    <%# tab %>
    <%= render 'layouts/devices_tab' %>

    <%# breadcrumb %>
    <% page_flow = breadcrumb(yield(:flow)) %>
    <% if page_flow %>
      <div class="zyxel_bread">
        <% page_flow.each_with_index do |flow, index| %>
          <% if index == page_flow.length - 1 %>
            <span><%= flow %></span>
          <% else %>
            <%= flow %> &gt; 
          <% end %>
        <% end %>
      </div>
    <% end %>
    <%# breadcrumb - end %>
    <%= yield %>

    <%# need remove when release %>
    <% if flash[:notice] || flash[:alert] || flash[:error] %>
      <div class="test">
        <p>Test Information, it will be removed when release.</p>
        <p class="notice"><%= flash[:notice] %></p>
        <p class="alert"><%= flash[:alert] %></p>
        <% if flash[:error] %>
        <p class="error"><%= flash[:error] %></p>
        <% end %>
      </div>
    <% end %>
  </div>
    
</body>
</html>
